@{
    ViewBag.Title = "Đăng Nhập";
    Layout = null;
}

<!DOCTYPE html>

<!-- MDB UI KIT -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.0/mdb.min.css" rel="stylesheet" />
<!-- Font Awesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
<!-- Google Fonts -->
<link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />

<div class="vh-100" style="background-image: url('../../Images/nen.jpg'); background-size: cover; background-position: center">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img class="img-responsive img-rounded" style="margin-top:150px;width:100%;height:30%;" src="~/Images/Logo.jpg" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">

                                @using (Html.BeginForm("DangNhap", "User", FormMethod.Post))
                                {
                                    @Html.ValidationSummary(true)

                                    <div class="d-flex align-items-center mb-3 pb-1">
                                        <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                        <span class="h1 fw-bold mb-0" style="color:dodgerblue">Restaurant management</span>
                                    </div>

                                    <h4 class="fw-normal mb-3 pb-3" style="letter-spacing: 2px; text-align: center;">Đăng Nhập</h4>

                                    <div class="form-outline mb-4">
                                        <input type="text" id="TenDN" name="TenDN" required class="form-control" />
                                        <label class="form-label" for="TenDN">Username</label>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input type="password" id="MatKhau" name="MatKhau" required class="form-control" />
                                        <label class="form-label" for="MatKhau">Password</label>
                                    </div>

                                    <div class="pt-1 mb-4" id="login-btn">
                                        <button class="btn btn-primary btn-lg btn-block" type="submit">Login</button>
                                    </div>

                                    <!-- Loading Spinner -->
                                    <div id="loading-spinner" class="text-center" style="display: none;">
                                        <div class="spinner-border text-primary" role="status">
                                            <span class="visually-hidden">Loading...</span>
                                        </div>
                                        <p>Đang kiểm tra thông tin đăng nhập...</p>
                                    </div>

                                    <!-- Google Login -->
                                    <div class="pt-1 mb-4">
                                        <a href="~/User/DangKy"
                                           class="btn btn-primary btn-lg btn-block"
                                           style="background-color: #dd4b39; font-size: 14px;" type="button">
                                            Đăng Ký tài khoản
                                        </a>
                                    </div>

                                    <p style="color:red">@ViewBag.kt</p>

                                    <p class="mb-2 pb-lg-2" style="color: #393f81;">
                                        <a href="~/User/LayMatKhau" style="color: #393f81;">Forgot password?</a>
                                    </p>
                                    
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- MDB JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.0/mdb.min.js"></script>

<!-- Spinner Script -->
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const form = document.querySelector("form");
        const spinner = document.getElementById("loading-spinner");
        const login = document.getElementById("login-btn");

        form.addEventListener("submit", function () {
            spinner.style.display = "block";
            login.style.display = "none";
        });
    });
</script>
