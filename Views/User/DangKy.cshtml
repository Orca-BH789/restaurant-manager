<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Email Opt-In Form</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        }

        body {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 1rem;
            background: linear-gradient(to bottom, #f97316, #ef4444);
        }

        .container {
            width: 100%;
            max-width: 28rem;
            background-color: white;
            border-radius: 0.5rem;
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
            padding: 2rem;
        }

        .form {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
        }

        .text-center {
            text-align: center;
        }

        .form-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: #1f2937;
            margin-bottom: 1.5rem;
        }

        .divider {
            border-top: 1px solid #e5e7eb;
            margin-bottom: 1.5rem;
        }

        .form-group {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .label {
            color: #4b5563;
            font-weight: 500;
            display: block;
            margin-bottom: 0.25rem;
        }

        .required {
            color: #ef4444;
            margin-left: 0.25rem;
        }

        .input {
            width: 100%;
            padding: 0.5rem 0.75rem;
            border: 1px solid #d1d5db;
            border-radius: 0.375rem;
            font-size: 0.875rem;
            line-height: 1.25rem;
        }

            .input:focus {
                outline: none;
                border-color: #2563eb;
                box-shadow: 0 0 0 1px #2563eb;
            }

        .name-group {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1rem;
            margin-top: 0.25rem;
        }

        .field-help {
            font-size: 0.75rem;
            color: #6b7280;
            margin-top: 0.25rem;
        }

        .button-container {
            display: flex;
            justify-content: center;
            padding-top: 1rem;
        }

        .submit-button {
            background-color: #0e1c5c;
            color: white;
            font-weight: 500;
            padding: 0.5rem 2.5rem;
            border: none;
            border-radius: 0.375rem;
            cursor: pointer;
            transition: background-color 0.2s;
        }

            .submit-button:hover {
                background-color: #162a7e;
            }
    </style>
</head>
<body>
    <div class="container">
        @using (Html.BeginForm("XuLyDangKy", "User", FormMethod.Post))
        {
            @Html.ValidationSummary(true)
            <div class="text-center">
                <h1 class="form-title">Tạo tài khoản</h1>
                <div class="divider"></div>
            </div>

            <div class="form-group">
                <div>
                    <label for="name" class="label">Name <span class="required">*</span></label>
                    <div class="name-group">
                        <div>
                            <input id="firstName" name="firstName" class="input" required />
                            <p class="field-help">First Name</p>
                        </div>
                        <div>
                            <input id="lastName" name="lastName" class="input" required />
                            <p class="field-help">Last Name</p>
                        </div>
                    </div>
                </div>

                <div>
                    <label for="email" class="label">E-mail <span class="required">*</span></label>
                    <input id="email" name="email" type="email" class="input" required />
                </div>

                <div>
                    <label for="phone" class="label">Phone <span class="required">*</span></label>
                    <input id="phone" name="phone" type="tel" placeholder="(###)-###-####" class="input" required />
                </div>
                <div>
                    <label for="name" class="label">UserName <span class="required">*</span></label>

                    <div>
                        <input id="username" name="username" class="input" required />

                    </div>


                </div>
                <div>
                    <label for="password" class="label">password <span class="required">*</span></label>
                    <input id="password" name="password" type="text" class="input" required />
                </div>
            </div>

            <div class="button-container">
                <button type="submit" class="submit-button">Đăng ký</button>
            </div>
            

        }
        <div class="button-container">
            <a href="@Url.Action("Index", "User")" class="submit-button" style="text-decoration: none">Đăng Nhập</a>
        </div>
    </div>
</body>
</html>