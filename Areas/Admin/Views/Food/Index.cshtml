@model IEnumerable<BASIC_PROJECT.Models.MonAn>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h2>Danh Sách Món Ăn</h2>

<p>
    @Html.ActionLink("Tạo Món", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Tên Món
        </th>
        <th>
            Thông Tin Món Ăn
        </th>
        <th>
            Giá
        </th>
        <th>
            Số Lượng Tồn Kho
        </th>
        <th>
            Đơn Vị Tính
        </th>
        <th>
            Loại
        </th>
        <th></th>
        <th></th>

    </tr>

    @foreach (var item in Model)
    {
        if (item.SLton <= 10)
        {
            <tr class="text-danger h6">
                <td>
                    @Html.DisplayFor(modelItem => item.TenMon)
                </td>
                <td>
                    @Html.Raw(item.ThontinMonan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SLton)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DonViTinh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Loai)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.MaMA })
                </td>
                <td>
                    @Html.ActionLink("Xóa", "Delete", new { id = item.MaMA })
                </td>
            </tr>
        }
        else
        {
            <tr class="fw-bold text-dark">
                <td>
                    @Html.DisplayFor(modelItem => item.TenMon)
                </td>
                <td>
                    @Html.Raw(item.ThontinMonan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SLton)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DonViTinh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Loai)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.MaMA })
                </td>
                <td>
                    <a href="@Url.Action("Xóa", "Food", new { id = item.MaMA })">Delete</a>
                </td>
            </tr>
        }
    }

</table>


